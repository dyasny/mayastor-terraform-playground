---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: metrics-server
  namespace: kube-system
spec:
  template:
    spec:
      hostAliases:
%{ for index,name in masters ~}
      - ip: ${master_ips[index]}
        hostnames:
        - ${name}
%{ endfor ~}
%{ for index,name in nodes ~}
      - ip: ${node_ips[index]}
        hostnames:
        - ${name}
%{ endfor ~}
      containers:
        - name: metrics-server
          args:
          - --cert-dir=/tmp
          - --secure-port=4443
          - --kubelet-port=10255
          - --deprecated-kubelet-completely-insecure
